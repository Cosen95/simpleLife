<!--pages/book-detail/book-detail.wxml-->
<wxs src="../../util/filter.wxs" module="filter" />
<view class="container">
    <view class="head">
        <image src="{{book.image}}" />
        <text class="title">{{book.title}}</text>
        <text class="author">{{book.author}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">短评</text>
        <view class="comment-container">
            <block wx:key="content" wx:for="{{filter.limit(comments,0,5)}}">
                <v-tag tag-class="{{tool.highLight(index)}}" text="{{item.content}}">
                    <text class="num" slot="num">
                        {{'+'+item.nums}}
                    </text>
                </v-tag>
            </block>
        </view>
    </view>
    <view class="sub-container">
        <text class="headline">内容简介</text>
        <text class="content" decode="{{true}}">{{filter.format(book.summary)}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">书本信息</text>
        <view class="detail-container">
            <view class="vertical description">
                <text>出版社</text>
                <text>出版年</text>
                <text>页数</text>
                <text>定价</text>
                <text>装帧</text>
            </view>
            <view class="vertical">
                <text>{{book.publisher}}</text>
                <text>{{book.pubdate}}</text>
                <text>{{book.pages}}</text>
                <text>{{book.price}}</text>
                <text>{{book.binding}}</text>
            </view>
        </view>
    </view>
</view>

<view class="post-container" wx:if="{{!posting}}">
    <view class="post-fake" bind:tap="handleFakePost">
        <text>输入短评</text>
    </view>
    <view class="like-container">
        <v-like bind:like="handleLike" class="like" like="{{likeStatus}}" count="{{likeCount}}" />
    </view>
</view>

<view class="posting-container" wx:if="{{posting}}">
    <view class="post-header">
        <text>仅可点击标签+1</text>
        <text class="cancel" bind:tap="handleCancel">取消</text>
    </view>
    <view class="comment-container">
        <block wx:key="content" wx:for="{{filter.limit(comments,0,3)}}">
                <v-tag bind:tapping="handlePost" tag-class="{{tool.highLight(index)}}" text="{{item.content}}">
                    <text class="num" slot="num">
                        {{'+'+item.nums}}
                    </text>
                </v-tag>
            </block>
    </view>
    <input type="text" placeholder="短评最多12个字" class="post" />
</view>

<v-mask wx:if="{{posting}}" />

<wxs module="tool">
    var highLight = function(index) {
        if(index === 0) {
            return 'ex-tag-first'
        }
        if(index === 1) {
            return 'ex-tag-second'
        }
        return ''
    }

    module.exports = {
        highLight: highLight
    }
</wxs>