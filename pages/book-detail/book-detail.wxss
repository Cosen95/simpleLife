/* pages/book-detail/book-detail.wxss */
.container {
    background-color: #f5f5f5;
    width: 100%;
}
.head {
    background-color: #ffffff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}
.author {
    font-size: 28rpx;
    color: #999999;
}
.head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}
.sub-container {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #ffffff;
    padding: 30rpx;
}
.headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}
.content {
    text-indent: 58rpx;
    font-weight: 500;
}
.comment-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    padding: 0 30rpx;
}
.comment-container v-tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}
